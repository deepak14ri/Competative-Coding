def meandArr():
    arr = [1,2,3,4,5,6,7]
    n = len(arr)
    temp = [0]*n 
    small,large = 0, n-1
    flag = True
    for i in range(n):
        if flag is False:
            temp[i] = arr[large] 
            large -= 1 
        else:
            temp[i] = arr[small]
            small += 1 
        flag = bool(1-flag)
    lst = []
    for i in range(n):
        arr[i] = temp[i]
        lst.append(temp[i])
    print(lst)
meandArr()

# output [1,7,2,6,3,5,4]
